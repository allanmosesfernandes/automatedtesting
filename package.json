{
  "name": "automated-testing-dashboard",
  "version": "1.0.0",
  "description": "Internal dashboard for running automated login flow tests across multiple regions",
  "main": "src/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dashboard": "node server/dashboard-server.js",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:printbox": "playwright test tests/e2e/printbox/printbox-links-validator.spec.ts",
    "test:printbox:headed": "playwright test tests/e2e/printbox/printbox-links-validator.spec.ts --headed",
    "split-links": "node scripts/split-links.js",
    "test:parallel": "node scripts/run-parallel-tests.js",
    "test:chunk": "playwright test tests/e2e/printbox/printbox-links-validator.spec.ts",
    "test:cart:setup:gb": "set TEST_REGION=GB&& npx playwright test tests/e2e/cart-checkout/session-setup.spec.ts --headed",
    "test:cart:setup:us": "set TEST_REGION=US&& npx playwright test tests/e2e/cart-checkout/session-setup.spec.ts --headed",
    "test:cart:gb": "set TEST_REGION=GB&& npx playwright test tests/e2e/cart-checkout/cart-checkout-flow.spec.ts --headed",
    "test:cart:us": "set TEST_REGION=US&& npx playwright test tests/e2e/cart-checkout/cart-checkout-flow.spec.ts --headed",
    "test:cart:gb:headless": "set TEST_REGION=GB&& npx playwright test tests/e2e/cart-checkout/cart-checkout-flow.spec.ts",
    "test:cart:us:headless": "set TEST_REGION=US&& npx playwright test tests/e2e/cart-checkout/cart-checkout-flow.spec.ts",
    "test:login:gb": "set TEST_REGION=GB&& npx playwright test tests/e2e/cart-checkout/login-and-navigate.spec.ts --headed",
    "test:login:us": "set TEST_REGION=US&& npx playwright test tests/e2e/cart-checkout/login-and-navigate.spec.ts --headed",
    "test:photobooks:gb": "set TEST_REGION=GB&& npx playwright test tests/e2e/cart-checkout/photo-books-flow.spec.ts --headed",
    "test:photobooks:us": "set TEST_REGION=US&& npx playwright test tests/e2e/cart-checkout/photo-books-flow.spec.ts --headed",
    "test:calendars:gb": "set TEST_REGION=GB&& npx playwright test tests/e2e/cart-checkout/photo-calendars-flow.spec.ts --headed",
    "test:calendars:us": "set TEST_REGION=US&& npx playwright test tests/e2e/cart-checkout/photo-calendars-flow.spec.ts --headed"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "e2e"
  ],
  "author": "PrinterPix Internal Team",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.40.1",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-basic-auth": "^1.2.1",
    "playwright": "^1.40.1",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
