{
  "name": "automated-testing-dashboard",
  "version": "1.0.0",
  "description": "Internal dashboard for running automated login flow tests across multiple regions",
  "main": "src/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "e2e"
  ],
  "author": "PrinterPix Internal Team",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@playwright/test": "^1.40.1",
    "playwright": "^1.40.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
